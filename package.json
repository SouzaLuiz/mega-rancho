{
  "name": "mega-rancho",
  "version": "1.0.0",
  "main": "src/server.js",
  "scripts": {
    "start": "yarn build && node -r esm src/server.js",
    "build": "yarn sass:build && yarn parcel:build",
    "dev": "npm-run-all -p nodemon sass:dev parcel:dev browser-sync",
    "nodemon": "nodemon -r esm src/server.js",
    "browser-sync": "browser-sync start --proxy 'localhost:3333' --files 'src/public/**, src/app/views/**'",
    "sass:dev": "sass --watch src/sass:src/public/styles",
    "sass:build": "sass --no-source-map --style=compressed src/sass:src/public/styles",
		"parcel:dev": "parcel watch src/scripts/*.js -d src/public/scripts --public-url ./",
    "parcel:build": "parcel build --no-source-maps src/scripts/*.js -d src/public/scripts"
  },
  "license": "MIT",
  "dependencies": {
    "cloudinary": "^1.23.0",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "js-cookie": "^2.2.1",
    "mongoose": "^5.9.19",
    "multer": "^1.4.2",
    "node-telegram-bot-api": "^0.50.0",
    "nunjucks": "^3.2.1",
		"parcel-bundler": "^1.12.4",
		"sass": "^1.29.0",
    "sharp": "^0.25.4",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "browser-sync": "^2.26.13",
    "eslint": "^7.14.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
		"npm-run-all": "^4.1.5",
    "nodemon": "^2.0.4"
  }
}
